.fallback
    display: none

.js #js-required
    visibility: hidden
    display: none

.no-js #js-required
    visibility: visible

html, body
    height: 100%

#wrap
    min-height: 100%

@media (min-width: 979px)
    #page-container
        padding-top: 40px

#main
    overflow: auto
    padding-bottom: 80px

footer
    position: relative
    margin-top: -80px
    height: 20px
    clear: both
    padding: 30px 0

    width: 100%
    background-color: whiteSmoke
    border-top: 1px solid #ddd

.footer-links
    margin: 0
    padding: 0

    li
        display: inline
        margin-right: 2em